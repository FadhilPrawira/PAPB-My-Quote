            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_anggota_1"
            app:layout_constraintStart_toStartOf="@+id/tv_anggota_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_anggota_1" />

        <TextView
            android:id="@+id/tv_anggota_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:text="Laila Himatul Khaizah - 21060120120026"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_anggota_2"
